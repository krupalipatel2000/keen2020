@model KeenConveyance.Areas.Admin.Models.tblFeedback
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="@Url.Action("Index","Driver")" class="btn btn-primary">
                <i class="fa fa-step-backward"></i>
            </a>
        </h6>
    </div>
    <div class="card-body">
        <div>
            <div class="row">
                <div class="col-md-8">
                    <div class="row">
                        <h1 class="alert-light">@ViewBag.Company's Feedback</h1>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <i class="fa fa-1x fa-user"></i>
                        </div>
                        <div class="col-6">
                            <h5>@ViewBag.User</h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-2">
                            <h5 class="fa fa-1x">Subject of Feedback</h5>
                            @*<i class="fa fa-1x "></i>*@
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.Subject)</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <i class="fa fa-1x">Description</i>
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.Desc)</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <i class="fa fa-calendar-day"></i>
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.CreatedOn)</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <h5 class="fa fa-1x">Rating</h5>
                            @*<i class="fa fa-star"></i>*@
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.Rate)</h5>
                        </div>
                    </div>
                    <br />
                </div>
            </div>
            <div class="col-md-4" style="text-align:center">
                <p>
                    Member since <b> @Model.CreatedOn.Year </b>
                </p>
                <br />
            </div>
        </div>
    </div>
</div>

