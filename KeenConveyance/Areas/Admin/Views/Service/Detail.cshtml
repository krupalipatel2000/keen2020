@model KeenConveyance.Areas.Admin.Models.tblService
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="@Url.Action("Index","Service")" class="btn btn-primary">
                <i class="fa fa-step-backward"></i>
            </a>
        </h6>
    </div>
    <div class="card-body">
        <div>
            <div class="row">
                <div class="col-md-4" style="text-align:center">
                    <img src="~/Images/@Html.DisplayFor(model => model.ServiceImage)" class="img-thumbnail" />
                    <br />

                    <br />
                    <p>
                        Member since <b> @Model.CreatedOn.Year </b>
                    </p>
                    <br />
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <h1 class="text-primary"><b>@Html.DisplayFor(model => model.ServiceName)'s Profile</b></h1>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-2">
                            <h5 class="fa fa-1x">Name of Company</h5>
                            @*<i class="fa fa-1x fa-user"></i>*@
                        </div>
                        <div class="col-6">
                            <h5>@ViewBag.Company</h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-2">
                            <h5 class="fa fa-1x">Detail Description of Service</h5>
                            @*<i class="fa fa-1x fa-phone"></i>*@
                        </div>
                        <div class="col-6">
                                <h5>@Html.DisplayFor(model => model.ServiceDesc)</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <i class="fa fa-1x fa-calendar-day"></i>
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.CreatedOn)</h5>
                        </div>
                    </div>
                    <div class="row">
                        <h5 class="fa fa-1x">
                            IsActive
                        </h5>
                        <div class="col-2">
                            @if (Model.IsActive == true)
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                                    <input type="checkbox" disabled checked class="custom-control-input" id="active_@Model.ServiceId" onchange="return activate(@Model.ServiceId)">
                                    <label class="custom-control-label" for="active_@Model.ServiceId"></label>
                                </div>
                            }
                            else
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                                    <input type="checkbox" disabled class="custom-control-input" id="active_@Model.ServiceId" onchange="return activate(@Model.ServiceId)">
                                    <label class="custom-control-label" for="active_@Model.ServiceId"></label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

