
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="@Url.Action("Index","Service")" class="btn btn-primary">
                <i class="fa fa-step-backward"></i>
            </a>
        </h6>
    </div>
    <div class="card-body">
        <form class="user" method="post" name="registration">
            <div class="form-group row">
                <div class="col-md-5">
                    Image of Service :
                </div>
            </div>
            <div class="row">
                <div class="col-sm-5">
                    <input type="file" class="form-control" value="@Model.ServiceImage" name="txtSimage" placeholder="Service Image">
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-md-5">
                    Name of Service :
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-5">
                    <input type="text" class="form-control" value="@Model.ServiceName" name="txtSname" placeholder="Service Name">
                </div>
            </div>
          
            <div class="form-group row">
                <div class="col-md-5">
                    Description of Service :
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-5">
                    <input type="text" class="form-control" value="@Model.ServiceDesc" name="txtDesc" placeholder="Service Description"><br />
                </div>
            </div>
            <br />
            <input type="submit" value="Update Company" class="btn btn-success" onclick="return validate();" />
        </form>
    </div>
</div>



