
@{
    ViewBag.Title = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Add New Service</h6>
    </div>
    <div class="card-body">
        <form class="user" method="post" name="registration">
            <div class="form-group row">
                <div class="col-sm-10 mb-3 mb-sm-0">
                    <input type="text" class="form-control" name="txtSname" placeholder="Service Name" maxlength="20">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 mb-3 mb-sm-0">
                    <input type="text" class="form-control" name="txtDesc" placeholder="Service Description">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <input type="file" accept="~/Images/" onchange="return loadFile(event);" class="form-control" id="txtSimage" name="txtSimage" placeholder="Logo">
                </div>
                <div class="col-4">
                    <img src="#" id="txtSimage" name="txtSimage" class="img-fluid img-thumbnail" style="width:100px;height:100px" hidden />
                </div>
            </div>
            <input type="submit" value="Create Service" class="btn btn-success" />
        </form>
    </div>
</div>
<script>
    var loadFile = function (event) {
        var output = document.getElementById('txtSimage');
        output.src = URL.createObjectURL(event.target.files[0]);
        output.hidden = false;
    };
</script>

