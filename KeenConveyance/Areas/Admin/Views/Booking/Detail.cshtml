@model KeenConveyance.Areas.Admin.Models.tblBooking
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="@Url.Action("Index","Booking")" class="btn btn-primary">
                <i class="fa fa-step-backward"></i>
            </a>
        </h6>
    </div>
    <div class="card-body">
        <div>
            <div class="row">
                <div class="col-md-8">
                    <div class="row">
                        <h1 class="text-info">@Html.DisplayFor(model => model.BookingId)'s Order</h1><br />
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-2">
                            <i class="fa fa-1x fa-mail-bulk"></i>
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.ConsignmentId)</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <h5 class="fa fa-1">Vehicle Name</h5>
                            @*<i class="fa fa-1x fa-mail-bulk"></i>*@
                        </div>
                        <div class="col-6">
                            <h5>@ViewBag.Vehicle</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <h5 class="fa fa-1">Driver Name</h5>
                            @*<i class="fa fa-1x fa-mail-bulk"></i>*@
                        </div>
                        <div class="col-6">
                            <h5>@ViewBag.Driver</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <h5 class="fa fa-1">Dispatch Date</h5>
                            @*<i class="fa fa-1x fa-"></i>*@
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.DispatchDate)</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <h5 class="fa fa-1">Delivered Date</h5>
                            @*<i class="fa fa-1x fa-mail-bulk"></i>*@
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.DeliveredDate)</h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-2">
                            <h5 class="fa fa-1">Total Payment of Consignment</h5>
                            @*<i class="fa fa-1x fa-mail-bulk"></i>*@
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.TotalPayment)</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <h5 class="fa fa-1">Remarks for Consignment</h5>
                            @*<i class="fa fa-1x fa-mail-bulk"></i>*@
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.Remarks)</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <h5 class="fa fa-1">Mode of Payment</h5>
                            @*<i class="fa fa-1x fa-mail-bulk"></i>*@
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.PaymentMode)</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <i class="fa fa-1x fa-mail-bulk"></i>
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.BidId)</h5>
                        </div>
                    </div>
                    <div class="row">
                        <h5 class="fa fa-1x">
                            IsPaid
                        </h5>
                        <div class="col-2">
                            @if (Model.IsPaid == true)
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                                    <input type="checkbox" disabled checked class="custom-control-input" id="active_@Model.BookingId" onchange="return activate(@Model.BookingId)">
                                    <label class="custom-control-label" for="active_@Model.BookingId"></label>
                                </div>
                            }
                            else
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                                    <input type="checkbox" disabled class="custom-control-input" id="active_@Model.BookingId" onchange="return activate(@Model.BookingId)">
                                    <label class="custom-control-label" for="active_@Model.BookingId"></label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4" style="text-align:center">
            <p>
                Member since <b> @Html.ViewBag.Year </b>
            </p>
            <br />
        </div>
    </div>
</div>

