@model KeenConveyance.Areas.Admin.Models.tblVehicleType
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="@Url.Action("Index","VehicleType")" class="btn btn-primary">
                <i class="fa fa-step-backward"></i>
            </a>

        </h6>
    </div>
    <div class="card-body">
        <div>
            <div class="row">
                <div class="col-md-4" style="text-align:center">
                    <img src="~/Images/@Html.DisplayFor(model => model.TypeImage)" class="img-thumbnail" />
                    <br />

                    <br />
                    <p>
                        Member since <b> @Html.ViewBag.Year </b>
                    </p>
                    <br />
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <h1 class="alert-light">@Html.DisplayFor(model => model.VehicleTypeId)'s vehicle</h1>
                    </div>
                    <div class="row">
                        <div class="col-1">
                            <i class="fa fa-1x fa-truck"></i>
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.TypeName)</h5>
                        </div>
                    </div>

                   

            </div>
        </div>
    </div>
</div>

