@model KeenConveyance.Areas.Admin.Models.tblVehicleType
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
    <script>
        function validate() {
            var name = document.registration.txtName;
            var image = document.registration.txtImage;
            var name_pat = /^[A-Za-z]+$/;
            if (name.value != "" && name.value.match(name_pat)) {
            }
            else {
                alert("Vehicle Type Name is not Proper");
                name.focus();
                return false;
            }
            if (image.value != "") {
            }
            else {
                alert("Choose image");
                name.focus();
                return false;
            }
            
            return true;
        }
