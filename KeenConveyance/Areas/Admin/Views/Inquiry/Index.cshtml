@model IEnumerable<KeenConveyance.Areas.Admin.Models.tblInquiry>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List of Inquiry</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Subject</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Subject</th>
                        <th>Description</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a href=" @Url.Action("Detail", new { id = item.InquiryId})">
                                    @item.FirstName @item.LastName
                                </a>
                            </td>
                            <td>@item.Subject</td>
                            <td>@item.Desc</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

