@model KeenConveyance.Areas.Admin.Models.tblInquiry
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="@Url.Action("Index","Driver")" class="btn btn-primary">
                <i class="fa fa-step-backward"></i>
            </a>
        </h6>
    </div>
    <div class="card-body">
        <div>
            <div class="row">
                <div class="col-md-4" style="text-align:center">
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <h1 class="alert-light">@Html.DisplayFor(model => model.FirstName)'s Inquiry</h1>
                    </div>
                    <div class="row">
                        <div class="col-1">
                            <i class="fa fa-1x fa-phone"></i>
                        </div>
                        <div class="col-6">
                            <a href="tel:@Html.DisplayFor(model => model.ContactNo)">
                                <h5>@Html.DisplayFor(model => model.ContactNo)</h5>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-1">
                            <i class="fa fa-1x fa-mail-bulk"></i>
                        </div>
                        <div class="col-6">
                            <a href="EmailID:@Html.DisplayFor(model => model.EmailId)">
                                <h5>@Html.DisplayFor(model => model.EmailId)</h5>
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-1">
                            <i class="fa fa-drivers-license-o" style="font-size:48px;color:red"></i>
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.Subject)</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-1">
                            <i class="fa fa-drivers-license-o" style="font-size:48px;color:red"></i>
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.Desc)</h5>
                        </div>
                    </div>
                    <div class="row">
                        <h5 class="fa fa-1x">
                            IsReplied &nbsp; @if (Model.IsReplied == true)
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                                    <input type="checkbox" disabled checked class="custom-control-input" id="active_@Model.InquiryId" onchange="return activate(@Model.InquiryId)">
                                    <label class="custom-control-label" for="active_@Model.InquiryId"></label>
                                </div>
                            }
                            else
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                                    <input type="checkbox" disabled class="custom-control-input" id="active_@Model.InquiryId" onchange="return activate(@Model.InquiryId)">
                                    <label class="custom-control-label" for="active_@Model.InquiryId"></label>
                                </div>
                            }
                        </h5>
                    </div>
                    <div class="row">
                        <div class="col-1">
                            <i class="fa fa-drivers-license-o" style="font-size:48px;color:red"></i>
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.RepliedText)</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-1">
                            <i class="fa fa-drivers-license-o" style="font-size:48px;color:red"></i>
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.RepliedOn)</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-1">
                            <i class="fa fa-drivers-license-o" style="font-size:48px;color:red"></i>
                        </div>
                        <div class="col-6">
                            <h5>@Html.DisplayFor(model => model.RepliedBy)</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
