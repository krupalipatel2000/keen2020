@model KeenConveyance.Areas.Admin.Models.tblTracking
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="@Url.Action("Index","Tracking")" class="btn btn-primary">
                <i class="fa fa-step-backward"></i>
            </a>
        </h6>
    </div>
    <div class="card-body">
        <div>


            <div class="row">
                <h1 class="alert-light"><b1>@Html.DisplayFor(model => model.TrackingId)'s Profile</b1></h1>
            </div>
            <div class="row">
                <div class="col-2">
                    <h4 class="fa fa-1x">Place of Sender</h4>
                </div>
                <div class="col-6">
                    <h4>@Html.DisplayFor(model => model.ToPlace)</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <h4 class="fa fa-1x">Place of Receiver</h4>
                </div>
                <div class="col-6">
                    <h4>@Html.DisplayFor(model => model.FromPlace)</h4>
                </div>
             </div>

            <div class="row">
                <div class="col-2">
                    <h4 class="fa fa-1x">Status</h4>
                </div>
                <div class="col-6">
                    <h4>@Html.DisplayFor(model => model.Status)</h4>
                    </div>
                </div>

            <div class="row">
                <div class="col-2">
                    <h4 class="fa fa-1x">ConsignmentId</h4>
                </div>
                <div class="col-6">
                    <h4>@Html.DisplayFor(model => model.ConsignmentId)</h4>
                    </div>
                </div>

            </div>
        <div class="col-md-4" style="text-align:center">
            <p>
                Member since <b> @Html.ViewBag.Year </b>
            </p>
            <br />
        </div>

    </div>

</div>
