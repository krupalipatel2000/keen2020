@model IEnumerable<KeenConveyance.Areas.Admin.Models.tblCMSPage>
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List of CMS Page</h6><br />
        <a href="@Url.Action("Index")">Add New CMS</a>
    </div>
    <form id="frmCMS">
        <div class="card-body">
            @Html.DropDownList("ddTitle", ViewBag.CMSTitle as SelectList, "Select Title", new { onchange = "TitleChange(this.value);" })

        </div>
    </form>
</div>
<script>
    function TitleChange(value) {
        document.location(@Url.Action("list", "CMSpage"));
    }
</script>
