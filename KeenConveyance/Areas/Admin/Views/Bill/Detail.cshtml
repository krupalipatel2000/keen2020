@model KeenConveyance.Areas.Admin.Models.tblBill
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="@Url.Action("Index","Bill")" class="btn btn-primary">
                <i class="fa fa-step-backward"></i>
            </a>
        </h6>
    </div>
    <div class="card-body">
        <div class="row">
            <h1 class="text text-primary"><b>@ViewBag.ComName Transportation Company</b></h1>
        </div>
        <hr />
        <div class="row">
            <img src="~/Images/weburl.png" style="height:50px;width:50px" />
            <h3 class="text text-dark"><b>&nbsp;@ViewBag.WebUrl</b></h3>
        </div>
        <div class="row">
            <h3>Name : <b>@ViewBag.UserName</b></h3>
        </div>
        <div class="row">
            <h3>Contact Number : <b>@ViewBag.cno</b></h3>
        </div>
        <br />
        <div class="row">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td><b>Sr.No.</b></td>
                        <td><b>Price</b></td>
                        <td><b>Toll Tax</b></td>
                        <td><b>GST</b></td>
                        <td><b>Total Amount</b></td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(model => model.BillId)</td>
                        <td>@Html.DisplayFor(model => model.Price)</td>
                        <td>@Html.DisplayFor(model => model.TollTax)</td>
                        <td>@Html.DisplayFor(model => model.GST)</td>
                        <td>@Html.DisplayFor(model => model.TotalPrice)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>