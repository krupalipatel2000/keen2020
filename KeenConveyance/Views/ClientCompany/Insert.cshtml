                if (val != "") {
                    $.ajax(
                        {
                            type: "POST",
                            url: "@Url.Action("checkEmail","Company")",
                            data: { id: val },
                            success: function (response) {
                                if (response == "false") {
                                }
                                else {
                                    alert("Email already exist");
                                    $('#txtEmail').val("");
                                    $('#txtEmail').focus();
                                }
                            },
                            failure: function (response) {
                                alert('Fail - ' + response.responseText);
                            },
                            error: function (response) {
                                alert('Error - ' + response.responseText);
                            }
