                            url: "@Url.Action("checkEmail","ClientCompany")",
                            data: { id: val },
                            success: function (response) {
                                if (response == "false") {
                                }
                                else {
                                    alert("Email already exist");
                                    $('#txtComEmail').val("");
                                    $('#txtComEmail').focus();
