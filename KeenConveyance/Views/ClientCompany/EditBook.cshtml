@model KeenConveyance.Areas.Admin.Models.tblBooking
@{
    ViewBag.Title = "EditBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <div class="p-2">
        <div class="card shadow mb-4" style="width:700px;">
            <div class="card-header py-3">
                <center><h4 class="m-0 font-weight-bold text-primary">Booking Detail</h4></center>
            </div>
            <div class="card-body">
                <form class="user" method="post" name="registration" enctype="multipart/form-data">
                    <div class="form-group row">
                        <div class="col-md-5">
                            <label>
                                <b style="color:black">
                                    Driver Name:
                                </b>
                            </label>
                        </div>
                        <div class="col-md-5">
                            @Html.DropDownList("ddDriver", ViewBag.driver as SelectList, "Select Driver", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-5">
                            <label>
                                <b style="color:black">
                                    Vehicle Name :
                                </b>
                            </label>
                        </div>
                        <div class="col-md-5">
                            @Html.DropDownList("ddVehicle", ViewBag.vehicle as SelectList, "Select Vehicle", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-5">
                            <label>
                                <b style="color:black">
                                    Dispatch Date :
                                </b>
                            </label>
                        </div>
                        <div class="col-md-5">
                            <input type="date" name="txtDispatch" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-5">
                            <label>
                                <b style="color:black">
                                    Delivered Date :
                                </b>
                            </label>
                        </div>
                        <div class="col-md-5">
                            <input type="date" name="txtDeliver" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-5">
                            <label>
                                <b style="color:black">
                                    Total Payment :
                                </b>
                            </label>
                        </div>
                        <div class="col-md-5">
                            <input type="text" name="txtPayment" class="form-control" placeholder="Enter payment" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-5">
                            <label>
                                <b style="color:black">
                                    Payment Mode :
                                </b>
                            </label>
                        </div>
                        <div class="col-md-5">
                            <input type="text" name="txtPaymentMode" class="form-control" placeholder="Enter payment mode" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-5">
                            <label>
                                <b style="color:black">
                                    Remarks :
                                </b>
                            </label>
                        </div>
                        <div class="col-md-5">
                            <input type="text" name="txtRemark" class="form-control" placeholder="Enter remarks" />
                        </div>
                    </div>
                    <input type="submit" value="Assign" class="btn btn-success" />
                </form>
            </div>
        </div>
    </div>
</center>

