
@{
    ViewBag.Title = "Track";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <div class="p-2">
        <div class="card shadow mb-4" style="width:700px;height:350px;">
            <div class="card-header py-3">
                <center><h4 class="m-0 font-weight-bold text-primary">Add Tracking Detail</h4></center>
            </div>
            <div class="card-body">
                <form class="user" method="post" name="registration" enctype="multipart/form-data">
                    <div class="form-group row">
                        <div class="col-sm-2 mb-3 mb-sm-0">
                            <label for="txtVname">ToPlace : </label>
                        </div>
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <input type="text" class="form-control" name="txtToplace" placeholder="Enter Sender place">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2 mb-3 mb-sm-0">
                            <label for="txtVname">FromPlace : </label>
                        </div>
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <input type="text" class="form-control" name="txtFromplace" placeholder="Enter Sender place">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2 mb-3 mb-sm-0">
                            <label for="txtVname">Status : </label>
                        </div>
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <input type="text" class="form-control" name="txtStatus" placeholder="Enter Sender place">
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-12 mb-3 mb-sm-0">
                            <input type="submit" name="txtSubmit" class="btn btn-success" value="Submit" />
                        </div>
                        <br />
                    </div>
                </form>
            </div>
        </div>
    </div>
</center>

