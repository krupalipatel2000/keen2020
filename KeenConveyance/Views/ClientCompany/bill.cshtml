@model KeenConveyance.Areas.Admin.Models.tblBill
@{
    ViewBag.Title = "bill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="card shadow mb-4">
    <form method="post">
        <div class="card-body">
            <div class="row">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td><b>Description</b></td>
                            <td><b>Price</b></td>
                            <td><b>Toll Tax</b></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td height="300px;">
                                <textarea cols="50" rows="10" style="border:hidden;" name="txtDesc"></textarea>
                            </td>
                            <td>@ViewBag.Price</td>
                            <td height="300px;">
                                <input type="text" style="border:hidden;" name="txtToll" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </td>
                        </tr>
                    </tbody>

                </table>
            </div>
        </div>
    </form>
</div>