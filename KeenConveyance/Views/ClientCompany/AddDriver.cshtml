    ViewBag.Title = "AddDriver";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <script>
        function validate() {
            var dname = document.registration.txtDname;
            var image = document.registration.txtProfile;
            var cno = document.registration.txtCno;
            var email = document.registration.txtEmail;
            var lno = document.registration.txtLno;
            var ano = document.registration.txtAno;
            var dname_pat = /^[A-Za-z]+$/;
            if (dname.value != "" && dname.value.match(dname_pat)) {
            }
            else {
                alert("DriverName is not Proper");
                dname.focus();
                return false;
            }
            //var image_pat = /^[A-Za-z]+$/;
            if (image.value != "") {
            }
            else {
                alert("Select Image");
                image.focus();
                return false;
            }

            var cno_pat = /^\d{10}$/;
            if (cno.value != "" && cno.value.match(cno_pat)) {
            }
            else {
                alert("Contact number is not Proper");
                cno.focus();
                return false;
            }
            var email_pat = /^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
            if (email.value.match(email_pat)) {
            }
            else {
                alert("Email is not Proper");
                email.focus();
                return false;
            }

            var lno_pat = /^(?<intro>[A-Z]{2})(?<numeric>\d{2})(?<year>\d{4})(?<tail>\d{7})$/;
            if (lno != "" && lno.value.match(lno_pat)) {
            }
            else {
                alert("LicenseNo is not Proper");
                lno.focus();
                return false;
            }
            var ano_pat = /^\d{12}$/;
            if (ano != "" && ano.value.match(ano_pat)) {
            }
            else {
                alert("AadharcardNo is not Proper");
                ano.focus();
                return false;
            }


            return true;
        }
    </script>
        <style>
                body, html {
                    height: 100%;
                }

                .bg-img {
                    /* The image used */
                    background-image: url("../../Images/form1.jpg");
                    /* Control the height of the image */
                    min-height: 380px;
                    /* Center and scale the image nicely */
                    background-position: center;
                    background-repeat: no-repeat;
                    background-size: cover;
                }

