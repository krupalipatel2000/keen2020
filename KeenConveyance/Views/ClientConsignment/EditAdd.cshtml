                    <div class="form-group row">
                        <div class="col-sm-2">
                            <label>
                                <b style="color:black">
                                    LandMark:
                                </b>
                            </label>
                        </div>
                        <div class="col-sm-12 mb-3 mb-sm-3">
                            <input type="text" class="form-control" name="txtLandMark" placeholder="LandMark" value="@Model.Landmark">
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-sm-1">
                            <label>
                                <b style="color:black">
                                    Area:
                                </b>
                            </label>

                        </div>
                        <div class="col-sm-12 mb-3 mb-sm-0">
                            <input type="text" class="form-control" value="@Model.Area" name="txtArea" placeholder="Your Area">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-1">
                            <label>
                                <b style="color:black">
