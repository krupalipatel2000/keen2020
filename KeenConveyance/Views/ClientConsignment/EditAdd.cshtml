                        </div>
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <input type="text" class="form-control" value="@Model.Zipcode" name="txtZipcode" placeholder="ZipCode">
                        </div>
                    </div>
                    
                    <input type="submit" value="Update Address" class="btn btn-success"  />
                </form>
            </div>
        </div>
    </div>
