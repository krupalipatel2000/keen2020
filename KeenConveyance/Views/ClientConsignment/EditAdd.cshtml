                            <label>
                                <b style="color:black">
                                    AddressType:
                                </b>
                            </label>
                        </div>
                        <div class="col-sm-11">
                            <label>
                                <b style="color:black">
                                    HouseNo :
                                </b>
                            </label>
                        </div>

                        <div class="col-sm-6 mb-3 mb-sm-3">
                            <input type="text" class="form-control" value="@Model.AddressType" name="txtAddressType" placeholder="Address Type">
                        </div>
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <input type="text" class="form-control" value="@Model.HouseNo" name="txtHouseNo" placeholder="HouseNo">
                        </div>
                    </div>
