    $(document).ready(function () {
        //alert("Done");
        $('#dataTable').DataTable();
    });
</script>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            Consignment Images
        </h6>
    </div>
    <div class="card-body">
        <div class="row">
            @foreach (var item in ViewBag.ConsignmentImage)
            {
                <div class="col-lg-3">
                    <img src="~/Images/@item.ImageURL" class="img img-thumbnail" />
                </div>
            }
        </div>
    </div>
</div>
<div class="card-body">
    <form class="user" method="post" name="registration" enctype="multipart/form-data">
        <div class="form-group row">
            <div class="col-sm-3 mb-3 mb-sm-3">
                <label>
                    <b style="color:black">
                        BidAmount:
                    </b>
                </label>
            </div>
            <div class="col-sm-3 mb-3 mb-sm-3">
                <label>
                    <b style="color:black">
                        BidTime :
                    </b>
                </label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3 mb-3 mb-sm-3">
                <input type="text" class="form-control" name="txtBidAmount" placeholder="Bid Amount">
            </div>
            <div class="col-sm-3 mb-3 mb-sm-3">
                <input type="text" class="form-control" name="txtBidTime" placeholder="BidTime">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3 mb-3 mb-sm-3">
                <input type="submit" class="btn btn-success" value="Submit">
            </div>
</div>
    </form>
</div>

