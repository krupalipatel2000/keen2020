
@{
    ViewBag.Title = "ComConsignment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />
<div class="row">
    <div class="col-md-5">
        <div class="card shadow mb-4" style="width:500px;">
