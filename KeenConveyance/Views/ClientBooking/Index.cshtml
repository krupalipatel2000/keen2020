                                    <label class="custom-control-label" for="active_@item.consignment.ConsignmentId"></label>
                                </div>
                            }
                            else
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                                    <input type="checkbox" disabled class="custom-control-input" id="active_@item.consignment.ConsignmentId" onchange="return activate(@item.consignment.ConsignmentId)">
                                    <label class="custom-control-label" for="active_@item.consignment.ConsignmentId"></label>
                                </div>
                            }
                        </div>
                        <div class="col-4">
                            <h5 class="text" style="font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">
                                IsActive :
                            </h5>
                        </div>
                        <div class="col-1">
                            @if (item.consignment.IsActive == true)
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                                    <input type="checkbox" disabled checked class="custom-control-input" id="active_@item.consignment.ConsignmentId" onchange="return activate(@item.consignment.ConsignmentId)">
                                    <label class="custom-control-label" for="active_@item.consignment.ConsignmentId"></label>
                                </div>
                            }
                            else
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                                    <input type="checkbox" disabled class="custom-control-input" id="active_@item.consignment.ConsignmentId" onchange="return activate(@item.consignment.ConsignmentId)">
                                    <label class="custom-control-label" for="active_@item.consignment.ConsignmentId"></label>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <h5 class="text" style="font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">
                                IsDelicate :
                            </h5>
                        </div>
                        <div class="col-1">
                            @if (item.consignment.IsDelicate == true)
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                                    <input type="checkbox" disabled checked class="custom-control-input" id="active_@item.consignment.ConsignmentId" onchange="return activate(@item.consignment.ConsignmentId)">
                                    <label class="custom-control-label" for="active_@item.consignment.ConsignmentId"></label>
                                </div>
                            }
                            else
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                                    <input type="checkbox" disabled class="custom-control-input" id="active_@item.consignment.ConsignmentId" onchange="return activate(@item.consignment.ConsignmentId)">
                                    <label class="custom-control-label" for="active_@item.consignment.ConsignmentId"></label>
                                </div>
                            }
                        </div>
                        <div class="col-4">
                            <h5 class="text" style="font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">
                                IsPaid :
                            </h5>
                        </div>
                        <div class="col-1">
                            @if (item.consignment.IsPaid == true)
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                                    <input type="checkbox" disabled checked class="custom-control-input" id="active_@item.consignment.ConsignmentId" onchange="return activate(@item.consignment.ConsignmentId)">
                                    <label class="custom-control-label" for="active_@item.consignment.ConsignmentId"></label>
                                </div>
                            }
                            else
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                                    <input type="checkbox" disabled class="custom-control-input" id="active_@item.consignment.ConsignmentId" onchange="return activate(@item.consignment.ConsignmentId)">
                                    <label class="custom-control-label" for="active_@item.consignment.ConsignmentId"></label>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
    <div class="col-md-6 offset-1">
        <div class="row">
            <div class="card shadow mb-4" style="width:500px;">
                <div class="card-body">
                    <h3 class="text" style="font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">
                        Select Driver & Vehicle
                    </h3>
                    <br />
                    <div class="form-group">
                        <select name="driver" class="form-control">
                            <option value="">Select Driver &nbsp;&nbsp;</option>
                            @foreach (var item in ViewBag.Booking)
                            {
                                <option value="@item.driver.DriverId">
                                    @item.driver.DriverName 
                                </option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <select name="vehicle" class="form-control">
                            <option value="">Select Vehicle &nbsp;&nbsp;</option>
                            <option value="">
                                @foreach (var item in ViewBag.Booking)
                                {
                                    @item.vehicle.VehicleName
                                }
                            </option>
                        </select>
                    </div>
                    <div class="form-group">
                        <center><input type="submit" class="btn btn-success" value="Assign" /></center>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>