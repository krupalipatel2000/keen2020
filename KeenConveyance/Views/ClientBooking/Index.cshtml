<br /><br />
<div class="row">
    <div class="col-md-4">
        <div class="card shadow mb-4" style="width:500px;">
            <div class="card-body">
                @foreach (var item in ViewBag.Booking)
                {
                    <h5 class="text" style="font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">Type of Unit : <b>@item.consignment.UnitType</b></h5><br />
                    <h5 class="text" style="font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">Value of Unit : <b>@item.consignment.UnitValue</b></h5><br />
                    <h5 class="text" style="font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">Budget : <b>@item.consignment.Budget</b></h5><br />
                    <h5 class="text" style="font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">
                        Min Bid Value : <b>@item.consignment.MinBidValue</b>
                        &nbsp;&nbsp; Max Bid Value : <b>@item.consignment.MaxBidValue</b>
                    </h5><br />
                    <h5 class="text" style="font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">
                        Mini Time : <b>@item.consignment.MinTime</b>
                        &nbsp;&nbsp; Max Time : <b>@item.consignment.MaxTime</b>
                    </h5><br />
                    <div class="row">
                        <div class="col-4">
                            <h5 class="text" style="font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">
                                IsRefregreted :
                            </h5>
                        </div>
                        <div class="col-1">
                            @if (item.consignment.IsRefregreted == true)
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                                    <input type="checkbox" disabled checked class="custom-control-input" id="active_@item.consignment.ConsignmentId" onchange="return activate(@item.consignment.ConsignmentId)">
                                    <label class="custom-control-label" for="active_@item.consignment.ConsignmentId"></label>
                                </div>
                            }
                            else
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                                    <input type="checkbox" disabled class="custom-control-input" id="active_@item.consignment.ConsignmentId" onchange="return activate(@item.consignment.ConsignmentId)">
                                    <label class="custom-control-label" for="active_@item.consignment.ConsignmentId"></label>
                                </div>
                            }
                        </div>
                        <div class="col-4">
                            <h5 class="text" style="font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">
                                IsDelivered :
                            </h5>
                        </div>
                        <div class="col-1">
                            @if (item.consignment.IsDelivered == true)
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                                    <input type="checkbox" disabled checked class="custom-control-input" id="active_@item.consignment.ConsignmentId" onchange="return activate(@item.consignment.ConsignmentId)">
                                    <label class="custom-control-label" for="active_@item.consignment.ConsignmentId"></label>
                                </div>
                            }
                            else
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                                    <input type="checkbox" disabled class="custom-control-input" id="active_@item.consignment.ConsignmentId" onchange="return activate(@item.consignment.ConsignmentId)">
                                    <label class="custom-control-label" for="active_@item.consignment.ConsignmentId"></label>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <h5 class="text" style="font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">
                                IsFlamable :
                            </h5>
                        </div>
                        <div class="col-1">
                            @if (item.consignment.IsFlamable == true)
                            {
                                <div class="custom-control custom-switch" style="float:right;margin-left:10px">
