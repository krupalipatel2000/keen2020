@model KeenConveyance.Areas.Admin.Models.tblConsignment
@{
    ViewBag.Title = "ViewBill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="py-2">
    <center>
        <div class="card shadow mb-4" style="width:1200px;">
            <div class="card-body">
                <div class="row">
                    <h1 class="text text-primary"><b>@ViewBag.Company Transportation Company</b></h1>
                </div>
                <hr />
                <div class="row">
                    <img src="~/Images/weburl.png" style="height:50px;width:50px" />
                    <h3 class="text text-dark"><b>&nbsp;@ViewBag.Weburl</b></h3>
                </div>
                <div class="row">
                    <h3>Name : <b>@ViewBag.UserName</b></h3>
                </div>
                <div class="row">
                    <h3>Contact Number : <b>@ViewBag.Contact</b></h3>
                </div>
                <br />
                <div class="row">
                    <table class="table table-bordered" style="width:1000px;">
                        <thead>
                            <tr>
                                <td><b>Description</b></td>
                                <td><b>Price</b></td>
                                <td><b>Toll Tax</b></td>
                                <td><b>GST</b></td>
                                <td><b>Total Amount</b></td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="height:300px;">@ViewBag.Desc</td>
                                <td>@ViewBag.Price</td>
                                <td>@ViewBag.Tolltax</td>
                                <td>@ViewBag.GST</td>
                                <td>@ViewBag.TotalPrice</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </center>
</div>
