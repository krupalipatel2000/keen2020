                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-7">
        <div class="p-2 offset-1">
            <div class="card shadow mb-4" style="width:700px;">
                <div class="card-header py-3">
                    <center><h4 class="m-0 font-weight-bold text-primary">User's Consignment</h4></center>
                </div>
                @foreach (var item in ViewBag.con)
                {
                    <div class="card-body">
                        <div class="row">
                            <h3 class="alert-light"># @ViewBag.conId</h3>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <h5 class="alert-light">From Address : </h5>
                            </div>
                            <div class="col-md-2">
                                <h5 class="alert-light">Distance : </h5>
                            </div>
                            <div class="col-md-3">
                                <h5 class="alert-light">To Address : </h5>
                            </div>
                            <div class="col-md-2">
                                <h5 class="alert-light">Total Bid : </h5>
                            </div>
                            <div class="col-md-2">
                                <a href="@Url.Action("ViewCon", "ClientConsignment",new { id = ViewBag.conId })" class="btn btn-success">View Detail</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <h5 class="alert-light">@ViewBag.House, @ViewBag.Source, @ViewBag.Landmark, @ViewBag.Area</h5>
                            </div>
                            <div class="col-md-2">
                                <h5 class="alert-light">@ViewBag.Distance</h5>
                            </div>
                            <div class="col-md-3">
                                <h5 class="alert-light">@ViewBag.House, @ViewBag.Destination, @ViewBag.Landmark, @ViewBag.Area</h5>
                            </div>
                            <div class="col-md-2">
                                <h5 class="alert-light">Total Bid : </h5>
                            </div>
                        </div>
                        

                    </div>
                }
                </div>
            </div>
        </div>
