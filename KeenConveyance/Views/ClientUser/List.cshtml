@model IEnumerable<KeenConveyance.Areas.Admin.Models.tblUser>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List of Admin</h6><br />
        <a href="@Url.Action("Insert")">Add New User</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ProfilePic</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>EmailId</th>
                        <th>ContactNo</th>
                        <th>IsActive</th>
                        <th>CreatedOn</th>
                        <th>IsVerified</th>
                        <th>IsMobileVerified</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>EmailId</th>
                        <th>ContactNo</th>
                        <th>IsActive</th>
                        <th>CreatedOn</th>
                        <th>IsVerified</th>
                        <th>IsMobileVerified</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><a href="@Url.Action("Detail", new { id = item.UserId })" id="flip">@item.FirstName</a></td>
                            <td>@item.LastName</td>
                            <td>@item.EmailId</td>
                            <td>@item.ContactNo</td>
                            <td>
                                @if (item.IsActive == true)
                                {
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" checked class="custom-control-input" id="active_@item.UserId" onchange="return activate(@item.UserId)">
                                        <label class="custom-control-label" for="active_@item.UserId"></label>
                                    </div>
                                }
                                else
                                {
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" checked class="custom-control-input" id="active_@item.UserId" onchange="return activate(@item.UserId)">
                                        <label class="custom-control-label" for="active_@item.UserId"></label>
                                    </div>
                                }
                            </td>
                            <td>@item.CreatedOn</td>
                            <td>
                                @if (item.IsVerified == true)
                                {
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" checked class="custom-control-input" id="active_@item.UserId" onchange="return activate(@item.UserId)">
                                        <label class="custom-control-label" for="active_@item.UserId"></label>
                                    </div>
                                }
                                else
                                {
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" checked class="custom-control-input" id="active_@item.UserId" onchange="return activate(@item.UserId)">
                                        <label class="custom-control-label" for="active_@item.UserId"></label>
                                    </div>
                                }
                            </td>
                            <td>
                                @if (item.IsMobileVerified == true)
                                {
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" checked class="custom-control-input" id="active_@item.UserId" onchange="return activate(@item.UserId)">
                                        <label class="custom-control-label" for="active_@item.UserId"></label>
                                    </div>
                                }
                                else
                                {
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" checked class="custom-control-input" id="active_@item.UserId" onchange="return activate(@item.UserId)">
                                        <label class="custom-control-label" for="active_@item.UserId"></label>
                                    </div>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Edit",new { id=item.UserId})">
                                    <i class="fa fa-edit"></i>
                                </a>|
                                <a href="@Url.Action("Delete",new { id=item.UserId})">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
