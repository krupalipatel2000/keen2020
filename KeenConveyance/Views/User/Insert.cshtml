
@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Insert</h2>
<script>
        function validate() {
            var name = document.registration.txtComName;
            var email = document.registration.txtComEmail;
            var password = document.registration.txtPwd;
            var cno = document.registration.txtComPhNo;
            var cpname = document.registration.txtContactPersonName;
            var cpno = document.registration.txtContactPersonPhNo;
            var name_pat = /^[A-Za-z]+$/;
            if (name.value != "" && name.value.match(name_pat)) {
            }
            else {
                alert("Name is not Proper");
                name.focus();
                return false;
            }
            var email_pat = /^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
            if (email.value != "" && email.value.match(email_pat)) {
            }
            else {
                alert("Email is not Proper");
                email.focus();
                return false;
            }
            var pass_pat = /^[A-Za-z]\w{7,14}$/;
            if (password != "" && password.value.match(pass_pat)) {
            }
            else {
                alert("Password is not Proper");
                password.focus();
                return false;
            }
            var cno_pat = /^\d{10}$/;
            if (cno.value != "" && cno.value.match(cno_pat)) {
            }
            else {
                alert("Contact number is not Proper");
                cno.focus();
                return false;
            }
            var cpname_pat = /^[A-Za-z]+$/;
            if (cpname.value != "" && cpname.value.match(cpname_pat)) {
            }
            else {
                alert("OwnerName is Not Proper");
                cpname.focus();
                return false;
            }
            var cpno_pat = /^\d{10}$/;
            if (cpno.value != "" && cpno.value.match(cpno_pat)) {
            }
            else {
                alert("Owner ContactNo is Not Proper");
                cpno.focus();
                return false;
            }
            return true;
        }
</script>

}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="@Url.Action("Index","ClientUser")" class="btn btn-primary">
                <i class="fa fa-step-backward"></i>
            </a>
        </h6><br />
       
    </div>
    <div class="card-body">
        <form class="user" method="post" name="registration" enctype="multipart/form-data">
            <div class="col-sm-6">
                <input type="file" class="form-control" name="txtprofile" placeholder="ProfilePic">
            </div>
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <input type="text" class="form-control" name="txtFirstName" placeholder="Your FirstName">
                </div>
                <div class="col-sm-6">
                    <input type="text" class="form-control" name="txtLastName" placeholder="Your FirstName">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <input type="email" class="form-control" name="txtEmailId" placeholder="Your EmailId">
                </div>
                <div class="col-sm-4 mb-3 mb-sm-0">
                    <input type="password" class="form-control" name="txtPwd" placeholder=" Your Password"><br />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4 mb-3 mb-sm-0">
                    <input type="radio" class="form-control" name="txtGender" placeholder="your Gender">
                </div>
                <div class="col-sm-10 mb-3 mb-sm-0">
                    <input type="text" class="form-control" name="txtCno" placeholder="Your ContactNumber"><br />
                </div>
            </div>

            <input type="submit" value="Create User" class="btn btn-success" onclick="return validate();" />
        </form>
    </div>
</div>