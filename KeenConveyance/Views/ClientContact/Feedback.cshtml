
@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="row offset-2" style="margin-top:20px;">
        <div class="col-md-4 col-lg-offset-1 ">
            <h2> Give Feedback </h2>
            <div class="form-group" style="margin-top:30px">
                <input name="txtSubject" type="text" id="txtSubject" class="form-control" placeholder="Subject" Required="" />
            </div>
            <div class="form-group">
                <textarea name="txtDesc" rows="2" cols="20" id="txtDesc" placeholder=" " class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" name="btnSubmit" value="Submit" id="btnSubmit" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>