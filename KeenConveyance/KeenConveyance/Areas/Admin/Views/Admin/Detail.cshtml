@model KeenConveyance.Areas.Admin.Models.tblAdmin
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div>
    <div class="row">
        <div class="col-md-4" style="text-align:center">
            <p>
                @Html.ActionLink("Edit Profile", "Edit", new { id = Model.AdminId })
            </p>
            <img src="~/Images/user2.png" class="img-thumbnail" id="userimage" />
            <br />
            <br />
            <p>
                Member since <b> @Model.CreatedOn.Year </b>
            </p>
        </div>
        <div class="col-md-8">
            <div class="row">
                <h1 class="alert-light"><b>@Html.DisplayFor(model => model.Name)'s Profile</b></h1>
            </div><hr />
            <div class="row">
                <h5 class="fa fa-envelope"> Email Address </h5>
                <h4 style="text-align:left"><br />@Html.DisplayFor(model => model.EmailId)</h4>
            </div>
            <div class="row">
                <h5 class="fa fa-phone"> Contact No. : </h5>
                <h4><br />@Html.DisplayFor(model => model.ContactNo)</h4>
            </div>
            <div class="row">
                <h5 class="fa fa-calendar"> CreatedOn : </h5>
                <h4><br />@Html.DisplayFor(model => model.CreatedOn)</h4>
            </div>
            <div class="row">
                <h5 class="fa fa-user"> CreatedBy : </h5>
                <h4><br />@ViewBag.AdminName</h4>
            </div>
            <div class="row">
                <h3>
                    IsActive : @if (Model.IsActive == true)
                    {
                        <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                            <input type="checkbox" disabled checked class="custom-control-input" id="active_@Model.AdminId" onchange="return activate(@Model.AdminId)">
                            <label class="custom-control-label" for="active_@Model.AdminId"></label>
                        </div>
                    }
                    else
                    {
                        <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                            <input type="checkbox" disabled checked class="custom-control-input" id="active_@Model.AdminId" onchange="return activate(@Model.AdminId)">
                            <label class="custom-control-label" for="active_@Model.AdminId"></label>
                        </div>
                    }
                </h3>
            </div>
            <div class="row">
                <h5>
                    IsSuper : @if (Model.IsSuper == true)
                    {
                        <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                            <input type="checkbox" disabled checked class="custom-control-input" id="active_@Model.AdminId" onchange="return activate(@Model.AdminId)">
                            <label class="custom-control-label" for="active_@Model.AdminId"></label>
                        </div>
                    }
                    else
                    {
                        <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                            <input type="checkbox" disabled checked class="custom-control-input" id="active_@Model.AdminId" onchange="return activate(@Model.AdminId)">
                            <label class="custom-control-label" for="active_@Model.AdminId"></label>
                        </div>
                    }
                </h5>
            </div>
            <div class="row">
                <h5>
                    IsInsert : @if (Model.IsInsert == true)
                    {
                        <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                            <input type="checkbox" disabled checked class="custom-control-input" id="active_@Model.AdminId" onchange="return activate(@Model.AdminId)">
                            <label class="custom-control-label" for="active_@Model.AdminId"></label>
                        </div>
                    }
                    else
                    {
                        <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                            <input type="checkbox" disabled checked class="custom-control-input" id="active_@Model.AdminId" onchange="return activate(@Model.AdminId)">
                            <label class="custom-control-label" for="active_@Model.AdminId"></label>
                        </div>
                    }
                </h5>
            </div>
            <div class="row">
                <h5>
                    IsEdit : @if (Model.IsEdit == true)
                    {
                        <div class="custom-control custom-switch" style="float:right;margin-left:10px">
