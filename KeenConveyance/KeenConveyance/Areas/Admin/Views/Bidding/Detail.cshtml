@model KeenConveyance.Areas.Admin.Models.JoinViewAll
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">

        <div class="col-md-8">
            <div class="row">
                <h1 class="alert-light">@Html.DisplayFor(model => model.company.CompanyName)'s Bid</h1>
            </div>
            <div class="row">
                <h4>ConsignmentId : @Html.DisplayFor(model => model.bid.ConsignmentId)</h4>
            </div>
            <div class="row">
                <h4>BidAmount : @Html.DisplayFor(model => model.bid.BidAmount)</h4> 
            </div>
            <div class="row">
                <h4>BidTime : @Html.DisplayFor(model => model.bid.EstimatedDelivery)</h4>
            </div>
            <div class="row">
                <h4>BidOn : @Html.DisplayFor(model => model.bid.BidOn)</h4>
            </div>
            <div class="row">
                <h4>
                    IsModified : @if (Model.bid.IsModified == true)
                    {
                        <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                            <input type="checkbox" disabled checked class="custom-control-input" id="active_@Model.bid.BidId" onchange="return activate(@Model.bid.BidId)">
                            <label class="custom-control-label" for="active_@Model.bid.BidId"></label>
                        </div>
                    }
                    else
                    {
                        <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                            <input type="checkbox" disabled class="custom-control-input" id="active_@Model.bid.BidId" onchange="return activate(@Model.bid.BidId)">
                            <label class="custom-control-label" for="active_@Model.bid.BidId"></label>
                        </div>
                    }
                </h4>
            </div>
            <div class="row">
                <h4>@Html.DisplayFor(model => model.bid.ModifiedOn)</h4>
            </div>
            <div class="row">
                <h4>
                    IsAssigned : @if (Model.bid.IsAssigned == true)
                    {
                        <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                            <input type="checkbox" disabled checked class="custom-control-input" id="active_@Model.bid.BidId" onchange="return activate(@Model.bid.BidId)">
                            <label class="custom-control-label" for="active_@Model.bid.BidId"></label>
                        </div>
                    }
                    else
                    {
                        <div class="custom-control custom-switch" style="float:right;margin-left:10px">
                            <input type="checkbox" disabled class="custom-control-input" id="active_@Model.bid.BidId" onchange="return activate(@Model.bid.BidId)">
                            <label class="custom-control-label" for="active_@Model.bid.BidId"></label>
                        </div>
                    }
                </h4>
            </div>

        </div>
    </div>
</div>
