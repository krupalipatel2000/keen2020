@model KeenConveyance.Areas.Admin.Models.tblTransportCompany

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
    <script>
        function validate() {
            var name = document.registration.txtName;
            var email = document.registration.txtEmail;
            var password = document.registration.txtPwd;
            var cno = document.registration.txtCno;
            var name_pat = /^[A-Za-z]+$/;
            if (name.value != "" && name.value.match(name_pat)) {
            }
            else {
                alert("Name is not Proper");
                name.focus();
                return false;
            }
            var email_pat = /^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
            if (email.value != "" && email.value.match(email_pat)) {
            }
            else {
                alert("Email is not Proper");
                email.focus();
                return false;
            }
            var pass_pat = /^[A-Za-z]\w{7,14}$/;
            if (password != "" && password.value.match(pass_pat)) {
            }
            else {
                alert("Wrong Password or Password does not match");
                password.focus();
                return false;
            }
            var cno_pat = /^[0-9]+$/;
            if (cno.value != "" && cno.value.match(cno_pat)) {
            }
            else {
                alert("Contact number is not Proper");
                cno.focus();
                return false;
            }
            return true;
        }
    </script>
}
<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Edit Company Detail</h1>
                        </div>
                        <form class="user" method="post">
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control" value="@Model.CompanyName" name="txtComName" placeholder="Company Name">
                                </div>
                                <div class="col-sm-6">
                                    <input type="file" class="form-control" value="@Model.Logo" name="txtLogo" placeholder="Logo">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control" value="@Model.CompanyPhNo" name="txtComPhNo" placeholder="Contact Number">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <input type="email" class="form-control" value="@Model.CompanyEmail" name="txtComEmail" placeholder="Email Address"><br />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10 mb-3 mb-sm-0">
                                    <input type="text" class="form-control" value="@Model.AboutCompany" name="txtAboutCompany" placeholder="Enter About Company"><br />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control" value="@Model.ContactPersonName" name="txtContactPersonName" placeholder="Enter Contact Person Name">
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" value="@Model.ContactPersonNo" name="txtContactPersonPhNo" placeholder="Enter Contact Person No"><br />
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" value="@Model.WebURL" name="txtWebURL" placeholder="Enter Web URL">
                                </div>
                            </div>
                            <input type="submit" value="Update Company" class="btn btn-success" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

