@model KeenConveyance.Areas.Admin.Models.tblPriceList
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
    <script>
        function validate() {
            var name = document.registration.txtName;
            var email = document.registration.txtEmail;
            var password = document.registration.txtPwd;
            var cno = document.registration.txtCno;
            var name_pat = /^[A-Za-z]+$/;
            if (name.value != "" && name.value.match(name_pat)) {
            }
            else {
                alert("Name is not Proper");
                name.focus();
                return false;
            }
            var email_pat = /^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
            if (email.value != "" && email.value.match(email_pat)) {
            }
            else {
                alert("Email is not Proper");
                email.focus();
                return false;
            }
            var pass_pat = /^[A-Za-z]\w{7,14}$/;
            if (password != "" && password.value.match(pass_pat)) {
            }
            else {
                alert("Wrong Password or Password does not match");
                password.focus();
                return false;
            }
            var cno_pat = /^[0-9]+$/;
            if (cno.value != "" && cno.value.match(cno_pat)) {
            }
            else {
                alert("Contact number is not Proper");
                cno.focus();
                return false;
            }
            return true;
        }
    </script>
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Add New Company</h6>
    </div>
    <div class="card-body">
        <form class="user" method="post">
            <div class="form-group row">
                <div class="col-sm-10 mb-3 mb-sm-0">
                    <input type="text" class="form-control" value="@Model.UnitName" name="txtUname" placeholder="Unit Name">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-5 mb-3 mb-sm-0">
                    <input type="text" class="form-control" value="@Model.MinValue" name="txtMin" placeholder="Enter Minimum Value">
                </div>
                <div class="col-sm-5 mb-3 mb-sm-0">
                    <input type="text" class="form-control" value="@Model.MaxValue" name="txtMax" placeholder="Enter Maximum Value">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-5 mb-3 mb-sm-0">
                    <input type="text" class="form-control" value="@Model.PricePerUnit" name="txtUnit" placeholder="Enter PricePerUnit"><br />
                </div>
                <div class="col-sm-5 mb-3 mb-sm-0">
                    <input type="text" class="form-control" value="@Model.CompanyId" name="txtCompanyId" placeholder="Enter CompanyId">
                </div>
            </div>
            <input type="submit" value="Create Pricelist" class="btn btn-success" />
        </form>
    </div>
</div>
